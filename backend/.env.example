# AIRRA Backend Configuration
# Copy this file to .env and fill in your values

# Application
AIRRA_ENVIRONMENT=development
AIRRA_DEBUG=true
AIRRA_LOG_LEVEL=INFO

# Database
AIRRA_DATABASE_URL=postgresql+asyncpg://airra:airra@localhost:5432/airra

# Redis
AIRRA_REDIS_URL=redis://localhost:6379/0

# LLM Provider (anthropic, openai, or openrouter)
AIRRA_LLM_PROVIDER=anthropic
# Example models: anthropic/claude-3.5-sonnet, google/gemini-2.0-flash-thinking-exp:free
AIRRA_LLM_MODEL=claude-3-5-sonnet-20241022

# API Keys (DO NOT COMMIT THESE)
AIRRA_ANTHROPIC_API_KEY=your_anthropic_api_key_here
AIRRA_OPENAI_API_KEY=your_openai_api_key_here
AIRRA_OPENROUTER_API_KEY=your_openrouter_api_key_here

# Prometheus
AIRRA_PROMETHEUS_URL=http://localhost:9090

# Detection Settings
AIRRA_ANOMALY_THRESHOLD_SIGMA=3.0
AIRRA_CONFIDENCE_THRESHOLD_HIGH=0.8
AIRRA_CONFIDENCE_THRESHOLD_LOW=0.5

# Execution
AIRRA_DRY_RUN_MODE=true
